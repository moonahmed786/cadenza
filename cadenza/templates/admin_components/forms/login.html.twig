{% extends "admin_components/form.html.twig" %}

{% set form_id = 'id_form_login' %}
{% set form_class = 'form' %}

{% block form_content %}
	<div class="form-group">
		<input type="hidden" id="inp-type" value="admin=1" />
		<input type="text" class="form-control input-lg" id="{{ form_id }}_username_input" placeholder="{{ TEXT.hint['username'] }}" />
	</div>
	<div class="form-group">
		<input type="password" class="form-control input-lg" id="{{ form_id }}_password_input" placeholder="{{ TEXT.hint['password'] }}" />
	</div>
	<div class="form-group">
		<button type="button" class="form-control btn btn-default" id="{{ form_id }}_login_btn">{{ TEXT.label['login'] }}</button>
	</div>
	<div class="text-left">
		<div class="alert hidden" role="alert" id="{{ form_id }}_alert_status"></div>
	</div>
{% endblock %}

{% block form_modals %}
{% endblock %}
