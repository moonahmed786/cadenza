{% extends "admin_components/modal.html.twig" %}

{% set modal_id = 'id_modal_confirm_user_unblock' %}
{% set modal_class = 'modal fade' %}
{% set modal_dialog_class = 'modal-dialog' %}
{% set modal_title = TEXT.label['confirmation_to_unblock'] %}
{% set has_footer = true %}

{% block modal_body %}
	<p>{{ TEXT.account['sure_unblock_user'] }} <strong>{{ user.email }}</strong>?</p>
	<div class="unblock-blurb">
		{% if user.user_type == 'teacher' %}
			{{ TEXT.blurb['confirm_user_unblock_teacher'] }}
		{% elseif user.user_type == 'student' %}
			{{ TEXT.blurb['confirm_user_unblock_student'] }}
		{% else %}
			{# TODO: unblock "default" user? #}
		{% endif %}
	</div>
{% endblock %}

{% block modal_footer %}
	<div class="floatleft">
		<button type="button" class="btn btn-default btn-lg" id="{{ modal_id }}_cancel_btn">{{ TEXT.label['cancel'] }}</button>
	</div>
	<div class="floatright">
		<button type="button" class="btn btn-success btn-lg" id="{{ modal_id }}_unblock_btn" data-uid="{{ user.uid }}">{{ TEXT.label['unblock_user'] }}</button>
	</div>
	<div class="clear"></div>
{% endblock %}
