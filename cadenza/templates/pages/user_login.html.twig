{% extends "admin_components/form.html.twig" %}

{% set form_id = 'id_form_login' %}
{% set form_class = 'form' %}
{% set form_method = 'POST' %}

{% block form_content %}
	<div class="text-left">
		<div class="alert hidden" role="alert" id="{{ form_id }}_alert_status"></div>
	</div>
	<div class="form-group">
		<input type="hidden" id="inp-type" value="1" name = "user"/>
		<input type="text" class="form-control input-lg" id="{{ form_id }}_username_input" placeholder="{{ TEXT.hint['email'] }}" name="username" />
	</div>
	<div class="form-group">
		<input type="password" class="form-control input-lg" id="{{ form_id }}_password_input" placeholder="{{ TEXT.hint['password'] }}" name="password" />
	</div>
	<div class="form-group">
		<button type="button" class="form-control btn btn-default" id="{{ form_id }}_login_btn" style="background-color: #f17300; color: #ffffff; font-size: 18px;">{{ TEXT.label['login'] }}</button>
	</div>
{% endblock %}

{% block form_modals %}
{% endblock %}