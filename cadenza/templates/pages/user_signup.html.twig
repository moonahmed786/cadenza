{% extends "admin_components/form.html.twig" %}

{% set form_id = 'id_form_signup' %}
{% set form_class = 'form' %}
{% set form_action = form_url %}
{% set form_method = 'POST' %}

{% set js_admin_components = [
	'forms/signup'
] %}	

{% block form_content %}
	<div class="form-group">
			<input type="hidden" id="inp-type" value="user=1" />
			<input type="text" name="name" value="{{ data.name }}"  required="required" class="form-control input-lg" id="{{ form_id }}_name" placeholder="{{ TEXT.signup['name'] }}" />
		</div>
		<div class="form-group">
			<input type="email" required="required" value="{{ data.email }}" name="email" class="form-control input-lg" id="{{ form_id }}_email" placeholder="{{ TEXT.signup['email'] }}" />
		</div>	
		<div class="form-group">
			<input type="text" name="username" required="required" value="{{ data.username }}" class="form-control input-lg" id="{{ form_id }}_username_input" placeholder="{{ TEXT.hint['username'] }}" />
		</div>
		<div class="form-group">
			<input type="password" name="password" required="required" class="form-control input-lg" id="{{ form_id }}_password_input" placeholder="{{ TEXT.hint['password'] }}" />
		</div>

		<div class="form-group">
			<input type="password" name="password_confirm" required="required" class="form-control input-lg" id="{{ form_id }}_password_confirm_input" placeholder="{{ TEXT.signup['confirm_password'] }}" />
		</div>
		<div class="form-group steach">
		<div class="row">
			<div class="col-sm-6 student" tooltip = "{{ TEXT.signup['teacher_list_text_1'] }} . {{ TEXT.signup['teacher_list_text_2'] }} . {{ TEXT.signup['teacher_list_text_3'] }} . {{ TEXT.signup['teacher_list_text_4'] }}">
				<input type="radio" name="user_type" required="required" {{ block('widget_attributes') }} value="student"{% if data.user_type=='student' %} checked="checked"{% endif %} />
		  		<label>Student</label>
			</div>
			<div class="col-sm-6 teacher" tooltip = "{{ TEXT.signup['teacher_list_text_1'] }} . {{ TEXT.signup['teacher_list_text_2'] }} . {{ TEXT.signup['teacher_list_text_3'] }} . {{ TEXT.signup['teacher_list_text_4'] }}">
				<input type="radio" name="user_type" required="required" {{ block('widget_attributes') }} value="teacher"{% if data.user_type=='teacher' %} checked="checked"{% endif %} />
				<label>Teacher</label>
			</div>
		</div>
		</div>
		<div class="form-group">
			<button type="submit" class="form-control btn btn-info" id="{{ form_id }}_signup_btn">Sign Up</button>
		</div>
		<div class="text-left">
			<div class="alert hidden" role="alert" id="{{ form_id }}_alert_status"></div>
		</div>
{% endblock %}

{% block form_modals %}
{% endblock %}