{% extends "admin_components/form.html.twig" %}

{% set form_id = 'id_forget_password' %}
{% set form_class = 'form' %}
{% set form_action = form_url %}
{% set form_method = 'POST' %}

{% set js_admin_components = [
	'forms/forget_password'
] %}

{% block form_content %}
	<div class="form-group">
		<input type="hidden" id="inp-type" value="user=1" />
		<input type="email" required="required" value="{{ data.email }}" name="email" class="form-control input-lg" id="{{ form_id }}_email" placeholder="{{ TEXT.hint['forgot_password_email'] }}" />
	</div>
	<div class="form-group">
		<button type="submit" class="form-control btn btn-default" id="{{ form_id }}_forget_password_btn" style="background-color: #f17300; color: #ffffff; font-size: 18px;">{{ TEXT.label['forgot_password'] }}</button>
	</div>
	<div class="text-left">
		<div class="alert hidden" role="alert" id="{{ form_id }}_alert_status"></div>
	</div>

{% endblock %}

{% block form_modals %}
{% endblock %}